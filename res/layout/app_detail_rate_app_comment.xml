<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_detail_rate_app_comment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/app_detail_rate_app_comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/app_detail_rate_app_comment_title"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/app_detail_rate_app_comment_textfield"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/app_detail_rate_app_comment_title"
        android:layout_alignRight="@+id/app_detail_rate_app_comment_title"
        android:layout_below="@+id/app_detail_rate_app_comment_title"
        android:layout_marginTop="4dp"        
        android:layout_marginRight="2dp"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/enter_comment"
        android:imeOptions="actionSend"
        android:inputType="textMultiLine"
        android:freezesText="true"
        android:lines="5"
        android:maxLength="255"
        android:singleLine="false" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/app_detail_rate_app_comment_character_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/app_detail_rate_app_comment_textfield"
        android:layout_below="@+id/app_detail_rate_app_comment_textfield"
        android:layout_marginRight="4dp"
        android:text="TextView" />

</RelativeLayout>
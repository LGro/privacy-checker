<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_detail_rating_permission_overlay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="100dp"
    android:background="@color/white" >

    <TextView
        android:id="@+id/app_detail_rating_permission_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:text="Permission Label"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/app_detail_rating_permission_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/app_detail_rating_permission_name"
        android:layout_below="@+id/app_detail_rating_permission_name"
        android:layout_marginRight="22dp"
        android:layout_marginTop="8dp" >

        <LinearLayout
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/app_detail_rating_permission_description"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Permission Details"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
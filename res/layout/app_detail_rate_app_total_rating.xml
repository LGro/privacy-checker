<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_detail_rate_app_total_rating"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/app_detail_rate_app_total_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/app_detail_rate_app_title"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/app_detail_rate_app_locks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_detail_rate_app_total_rate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" >

        <ToggleButton
            android:id="@+id/app_detail_rate_app_total_rating_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@layout/app_detail_rate_app_overlay_check_green"
            android:tag="1"
            android:text="@null"
            android:textOff="@null"
            android:textOn="@null" />

        <View
            android:layout_width="4dip"
            android:layout_height="fill_parent" />

        <ToggleButton
            android:id="@+id/app_detail_rate_app_total_rating_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@layout/app_detail_rate_app_overlay_check_green"
            android:tag="2"
            android:text="@null"
            android:textOff="@null"
            android:textOn="@null" />

        <View
            android:layout_width="4dip"
            android:layout_height="fill_parent" />

        <ToggleButton
            android:id="@+id/app_detail_rate_app_total_rating_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@layout/app_detail_rate_app_overlay_check_green"
            android:tag="3"
            android:text="@null"
            android:textOff="@null"
            android:textOn="@null" />

        <View
            android:layout_width="4dip"
            android:layout_height="fill_parent" />

        <ToggleButton
            android:id="@+id/app_detail_rate_app_total_rating_4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@layout/app_detail_rate_app_overlay_check_green"
            android:tag="4"
            android:text="@null"
            android:textOff="@null"
            android:textOn="@null" />

        <View
            android:layout_width="4dip"
            android:layout_height="fill_parent" />

        <ToggleButton
            android:id="@+id/app_detail_rate_app_total_rating_5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@layout/app_detail_rate_app_overlay_check_green"
            android:tag="5"
            android:text="@null"
            android:textOff="@null"
            android:textOn="@null" />
    </LinearLayout>

    <TextView
        android:id="@+id/app_detail_rate_app_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/app_detail_rate_app_locks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text=" " />

</RelativeLayout>
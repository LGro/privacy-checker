<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_detail_rating_permission_overlay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/app_detail_rating_permission_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:text="@string/app_detail_rate_app_heading"
        android:textSize="22sp"
        android:textStyle="bold" >
    </TextView>

    <View
        android:id="@+id/app_detail_rating_permission_viewline1"
        android:layout_width="wrap_content"
        android:layout_height="0.25dip"
        android:layout_below="@+id/app_detail_rating_permission_name"
        android:layout_centerVertical="true"
        android:background="#000000" />

    <ListView
        android:id="@+id/app_detail_rate_app_overlay_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="2dp"
        android:layout_above="@+id/app_detail_rate_app_overlay_send"
        android:layout_alignLeft="@+id/app_detail_rating_permission_name"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/app_detail_rating_permission_name"
        android:layout_below="@+id/app_detail_rating_permission_viewline1" />

    <View
        android:id="@+id/app_detail_rating_permission_viewline2"
        android:layout_width="wrap_content"
        android:layout_height="0.25dip"
        android:layout_above="@+id/app_detail_rate_app_overlay_send"
        android:layout_centerVertical="true"
        android:background="#000000" />

    <Button
        android:id="@+id/app_detail_rate_app_overlay_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:text="Senden" />

</RelativeLayout>
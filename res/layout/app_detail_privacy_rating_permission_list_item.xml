<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/app_detail_privacy_rating_permission_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/app_detail_privacy_rating_permission_list_item_nonexpert_image"
        android:text="Permission X" />

    <TextView
        android:id="@+id/app_detail_privacy_rating_permission_list_item_nonexpert_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="ne_count" />

    <TextView
        android:id="@+id/app_detail_privacy_rating_permission_list_item_nonexpert_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@+id/app_detail_privacy_rating_permission_list_item_nonexpert_count"
        android:text="ne_percent" />

    <ImageView
        android:id="@+id/app_detail_privacy_rating_permission_list_item_nonexpert_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@+id/app_detail_privacy_rating_permission_list_item_nonexpert_percent"
        android:src="@drawable/iconnonexpert" />

    <TextView
        android:id="@+id/app_detail_privacy_rating_permission_list_item_expert_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/app_detail_privacy_rating_permission_list_item_expert_percent"
        android:text="e_count" />

    <TextView
        android:id="@+id/app_detail_privacy_rating_permission_list_item_expert_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/app_detail_privacy_rating_permission_list_item_expert_image"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@+id/app_detail_privacy_rating_permission_list_item_expert_count"
        android:text="e_percent" />

    <ImageView
        android:id="@+id/app_detail_privacy_rating_permission_list_item_expert_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignLeft="@+id/app_detail_privacy_rating_permission_list_item_nonexpert_image"
        android:layout_below="@+id/app_detail_privacy_rating_permission_list_item_nonexpert_image"
        android:layout_marginTop="2dp"
        android:src="@drawable/iconexpert" />

</RelativeLayout>
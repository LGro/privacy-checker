<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ToggleButton
        android:id="@+id/app_detail_comment_more_button"        
        style="android:buttonStyleSmall"
        android:layout_marginRight="24dp"
        android:layout_marginBottom = "20dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"   
        android:layout_below="@+id/app_detail_comment_list"    
        android:background="@layout/app_detail_show_more_less"
        android:text="@null"
        android:textOff="@null"
        android:textOn="@null" />

    <TextView
        android:id="@+id/app_detail_comment_title"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"        
        android:layout_marginTop="18dp"
        android:layout_marginLeft="22dp"        
        android:layout_toLeftOf="@+id/app_detail_comment_more_button"
        android:text="Erfahrungsberichte"
        android:textSize="20dp"
        android:textStyle="bold" />
	<!-- android:layout_above="@+id/app_detail_comment_list" -->

    <ListView
        android:id="@+id/app_detail_comment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/app_detail_comment_title" >

    </ListView>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.otaris.zertapps.privacychecker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.otaris.zertapps.privacychecker.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.otaris.zertapps.privacychecker.InstalledAppsActivity"
            android:label="@string/title_activity_installed_apps"
            android:parentActivityName="de.otaris.zertapps.privacychecker.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.otaris.zertapps.privacychecker.HomeActivity" />
        </activity>
        <activity
            android:name="de.otaris.zertapps.privacychecker.AllAppsActivity"
            android:label="@string/title_activity_all_apps"
            android:parentActivityName="de.otaris.zertapps.privacychecker.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.otaris.zertapps.privacychecker.HomeActivity" />
        </activity>
        <activity
            android:name="de.otaris.zertapps.privacychecker.AppDetailsActivity"
            android:label="@string/title_activity_app_details"
            android:parentActivityName="de.otaris.zertapps.privacychecker.AllAppsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.otaris.zertapps.privacychecker.AllAppsActivity" />
        </activity>
        <activity
            android:name="de.otaris.zertapps.privacychecker.AppsByCategoryActivity"
            android:label="@string/title_activity_apps_by_category"
            android:parentActivityName="de.otaris.zertapps.privacychecker.AllAppsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.otaris.zertapps.privacychecker.AllAppsActivity" />
        </activity>
    </application>

</manifest>
